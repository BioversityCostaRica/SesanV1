<!--Modal-->

<div class="modal inmodal modalV" id="modal_v_{{ id_variables_ind }}" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content animated fadeIn">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span
                        class="sr-only">Close</span></button>
                <i class="fa fa-location-arrow modal-icon"></i>
                <h4 class="modal-title">Variable : {{ name_variable_ind }}</h4>

            </div>


            <div class="modal-body" style="overflow-y: auto; padding: 1px 0px 0px 0px ">


                <div class="col-lg-12" style="width: 100%;">

                    <form class="form-horizontal">


                        <!--------------------->

                        <div class="col-lg-12">
                            <div class="ibox">
                                <div class="ibox-content">
                                    <p></p>
                                    <div class="form-group"><label class="col-lg-2 control-label">Pregunta para esta
                                        variable</label>
                                        <div class="col-lg-10"><input type="text" class="form-control" id="v1_{{ id_variables_ind }}"
                                                                      value="{{ v_pregunta.decode("latin1") }}"></div>
                                    </div>
                                    <div class="form-group"><label class="col-lg-2 control-label">Unidad de
                                        medida</label>
                                        <div class="col-lg-10"><input type="text" class="form-control" id="v2_{{ id_variables_ind }}"
                                                                      value="{{ unidad_variable_ind.decode("latin1") }}">
                                        </div>
                                    </div>
                                    <div class="form-group"><label class="col-lg-2 control-label">Rango de la
                                        variable</label>
                                        <div class="col-lg-5"><input type="number" class="form-control"
                                                                     placeholder="min" id="var_min_{{ id_variables_ind }}" value="{{ min }}"></div>
                                        <div class="col-lg-5"><input type="number" class="form-control"
                                                                     placeholder="max" id="var_max_{{ id_variables_ind }}"value="{{ max }}"></div>
                                        <small style="color: white" class="col-lg-12 " id="incon_msj_{{ id_variables_ind }}">* Rango de
                                            datos
                                            incosistente
                                        </small>
                                    </div>


                                    <div id="rangos_div">
                                        <h3>Seleccione los rangos criticos para esta variable</h3>


                                        <ul class="sortable-list connectList agile-list" id="todo">

                                            <li class="info-element" id="task3">
                                                <div class="agile-detail">

                                                    <br><br><br>
                                                    <div class="col-sm-8 form-control input-sm slider0"
                                                         id="slider_{{ id_variables_ind }}"></div>
                                                    <br><br>
                                                    <div class="row">
                                                        <small class="col-lg-3 " id="rang1_{{ id_variables_ind }}">rang1</small>
                                                        <small class="col-lg-3 " id="rang2_{{ id_variables_ind }}">rang1</small>
                                                        <small class="col-lg-3 " id="rang3_{{ id_variables_ind }}">rang1</small>
                                                        <small class="col-lg-3 " id="rang4_{{ id_variables_ind }}">rang1</small>
                                                    </div>
                                                    <br><br>
                                                    <button type="button"
                                                            class="pull-right btn-circle btn-xs btn-white fa fa-rotate-right "
                                                            id="rotate_{{ id_variables_ind }}"></button>
                                                    <br><br>
                                                </div>
                                            </li>

                                        </ul>

                                    </div>
                                </div>
                            </div>
                        </div>


                        <!--------------------->


                    </form>


                </div>


            </div>
            <form method="POST" role="form" class="" action="{{ request.path }}" id="form_vars_{{ id_variables_ind }}">
                <div class="modal-footer">

                    <input name="vd1" id="vd1_{{ id_variables_ind }}" type="hidden" value="">
                    <input name="vd2" id="vd2_{{ id_variables_ind }}" type="hidden" value="">
                    <input name="vd3" id="vd3_{{ id_variables_ind }}" type="hidden" value="">
                    <input name="vd4" id="vd4_{{ id_variables_ind }}" type="hidden" value="">
                    <input name="vdR" id="vdR_{{ id_variables_ind }}" type="hidden" value="">
                    <input name="vId" id="vId" type="hidden" value="{{ id_variables_ind }}">

                    <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary" name="btn_save_var" id="btn_save_var">Guardar
                        cambios
                    </button>
                </div>
            </form>


        </div>
    </div>
</div>

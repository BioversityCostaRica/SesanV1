{% extends 'dashboard.jinja2' %}
{% block title %}
    <title>SESAN | Perfil</title>
{% endblock title %}


{% block pageheading %}
    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-sm-2">

        </div>
        <div class="col-sm-8 text-center">
            <h2>Perfil</h2>
        </div>
    </div>
{% endblock pageheading %}
{% block dashmenu %}
    {% snippet "snippets/dashopt.jinja2",request=request,user_role=activeUser.user_role,active="profile", dates=dates[0] +"_"+ dates[1] %}

{% endblock dashmenu %}

<div class="wrapper wrapper-content animated fadeInRight">
    {% block pagecontent %}
        <div class="col-lg-9">
            <div class="wrapper wrapper-content animated fadeInUp">
                <div class="ibox">
                    <div class="ibox-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="m-b-md">

                                    <h2>{{ activeUser.fullName.decode("latin1") }} ({{ activeUser.login }})</h2>
                                </div>
                                <dl class="dl-horizontal">
                                    <dt>Status:</dt>
                                    <dd><span class="label label-primary">Active</span></dd>
                                </dl>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-5">
                                <dl class="dl-horizontal">

                                    <dt>Parent:</dt>
                                    <dd><a href="#" class="text-navy"> {{ activeUser.parent }}</a></dd>

                                    {% if activeUser.user_role==2 %}
                                        <dt>Departamento:</dt>
                                        <dd> {{ depto.decode("latin1") }} </dd>
                                    {% else %}
                                        {% if activeUser.user_role==0 %}

                                            <dt>Municipio:</dt>
                                            <dd> {{ activeUser.munic.decode("latin1") }} </dd>
                                            <dt>Formularios :</dt>
                                            <dd> {{ forms }} </dd>
                                        {% else %}
                                            <dt>Rol:</dt>
                                            <dd> Supervisor</dd>
                                        {% endif %}
                                    {% endif %}
                                </dl>
                            </div>
                            <div class="col-lg-7" id="cluster_info">
                                <dl class="dl-horizontal">

                                    <dt>Email:</dt>
                                    <dd>  {{ activeUser.email }}</dd>
                                    <dt>Ingreso:</dt>
                                    <dd>     {{ activeUser.getJoinDate(activeUser.joindate) }}</dd>

                                </dl>


                            </div>
                            {% if activeUser.user_role!=2 %}
                                <div class="row col-lg-12" id="cluster_info" align="center">

                                    <dt>Configuracion</dt>
                                    <img src="{{ config }}" alt="person" style="width: 22%;"/>


                                </div>
                            {% endif %}

                        </div>


                    </div>
                </div>
            </div>
        </div>
